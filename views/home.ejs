<!doctype html>


<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; background-image: url("http://i.imgur.com/IFcqIOS.jpg"); opacity: 80% }
        h3 { text-align: center; margin-bottom: 10px; }
        form {text-align: center; }
        .r {margin-right: 20px;}
        .subButton {margin-top: 15px;}
        
    </style>
</head>
<body>

<div class="container">
    <div class = "text-center">
     <a href="/logout" class="btn btn-default btn-sm" style= "width: 150px;">Logout</a>
     <a href= "/create" class = "btn btn-default btn-sm" style = "width: 150px"> Create New Poll</a>
     </div>
    <div class="page-header text-center">
        <h1 style = "color: maroon" id = "polls"><span class="fa"></span> Polls</h1>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->

           
                    
                    
                    <% entries = data.map(function(elem) {
    return '<div class = "well"> <h3 href="/' + elem.num + '">' + elem.title + '</h3><form action="/home" method="get"><input type="radio" class = "r" name="option" value="r1">' +  elem.r1 + '               <input type="radio" name="option" value="r2">' +  elem.r2 + '<br><input type="radio" name="option" class = "r" value="r3">' +  elem.r3 + '           <input type="radio" name="option"  value="r4">' +  elem.r4 + '<br><input class = "subButton" type="submit" value="Submit"></form></div>';
}) -%>
<p><%- entries.join("") %></p>

            

    </div>

</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
</script>
</body>
</html>
